<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="6dp"
    >

    <ImageView
        android:id="@+id/imgOficinaList"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/txtNomeOficinaDetalhe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/imgOficinaList"
        android:text="@null"
        android:textAlignment="textStart"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Nome da Oficina" />

    <TextView
        android:id="@+id/txtDescricaoCurtaDetalhe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@null"
        android:textStyle="italic"
        tools:text="Descricao Curta Oficina"
        android:layout_below="@+id/txtNomeOficinaDetalhe"
        android:layout_alignStart="@+id/txtNomeOficinaDetalhe" />


</RelativeLayout>